            "schema": {
              "type": "string",
              "format": "uuid"
            },
            "required": true,
            "description": "Olinadigan binoning ID si"
          }
        ],
        "responses": {
          "200": {
            "description": "Bino ma'lumotlari",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "string",
                      "format": "uuid",
                      "description": "Binoning yagona identifikatori",
                      "example": "123e4567-e89b-12d3-a456-426614174000"
                    },
                    "name": {
                      "type": "string",
                      "description": "Binoning nomi",
                      "example": "Asosiy bino"
                    },
                    "address": {
                      "type": "string",
                      "description": "Binoning manzili",
                      "example": "Toshkent, Amir Temur ko'chasi, 10"
                    },
                    "creatorDTO": {
                      "type": "object",
                      "description": "Binoni yaratgan adminning ma'lumotlari",
                      "properties": {
                        "id": {
                          "type": "string",
                          "format": "uuid",
