          "401": {
            "description": "Token yuborilmagan yoki noto‘g‘ri"
          },
          "403": {
            "description": "Faqat adminlar kirishi mumkin"
          },
          "500": {
            "description": "Serverda xatolik"
          }
        }
      }
    },
