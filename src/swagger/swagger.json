            "schema": {
              "type": "string"
            },
            "description": "Foydalanuvchi ismi bo‘yicha filter",
            "required": false
          },
          {
            "in": "query",
            "name": "lastname",
            "schema": {
              "type": "string"
            },
            "description": "Foydalanuvchi familiyasi bo‘yicha filter",
            "required": false
          },
          {
            "in": "query",
            "name": "username",
            "schema": {
              "type": "string"
            },
            "description": "Foydalanuvchi username bo‘yicha filter",
