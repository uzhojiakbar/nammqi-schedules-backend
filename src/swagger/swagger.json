          },
          {
            "in": "query",
            "name": "address",
            "schema": {
              "type": "string"
            },
            "description": "Binoning manzili bo'yicha filter",
            "required": false
          },
          {
            "in": "query",
            "name": "page",
            "schema": {
              "type": "integer",
              "minimum": 1,
              "default": 1
